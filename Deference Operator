#include <stdio.h>

int main(void) {
    int x = 10;
    int *ptr = &x;

    printf("The value of variable x is : %d\n", x);
    printf("The memory address of x is : %p\n", &x);
    printf("The pointer points to : %p\n", ptr);
	  printf("The value of the pointer ptr : %p\n", ptr);
	  printf("Get the value of the place where the pointer point to : %d\n", *ptr);
    return 0;
}
