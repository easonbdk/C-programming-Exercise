#include <stdio.h>
#define LENGTH 10

int main(void) {
    int arr[LENGTH] = {0};
    int *ptr = arr;

    for(int i = 0; i < LENGTH; i++) {
        printf("&arr[%d]: %p", i ,&arr[i]);
        printf("\t\tptr + %d: %p\n", i, ptr + i);
    }

    return 0;
}
