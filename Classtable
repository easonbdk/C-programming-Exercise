#include <stdio.h>
#include <string.h>
#define ROW 10
#define COLUMN 6

int main(void) {
    char classtable[ROW][COLUMN];
    int i=0, j=0;
    classtable[0][0] = {" "};
    classtable[0][1] = {"Monday"};
    classtable[0][2] = {"Tuesday"};
    classtable[0][3] = {"Wednesday"};
    
    for(i=0; i<=1; i++){
        for(j=0; j<=COLUMN; j++){
            
            
            printf("Please input the Day name from Sunday to Saturday.\n")
            scanf("%s", classtable[i][j])
        }
    }
    for(i=1; i<ROW; i++){
        for(int j=0; j<COLUMN; j++) {
            maze[i][j] = (i + 1) * (j + 1);
        }
    }

    for(i = 0; i < ROW; i++) {
        for(j = 0; j < COLUMN; j++) {
            printf("%d\t", maze[i][j]);
        }
        putchar('\n');
    }

    return 0;
}
