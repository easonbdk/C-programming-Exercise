#include <stdio.h>
#include <string.h>

int main(void) {
    char str1[80] = "The first string.";
    char str2[] = "The second string.";

    printf("Before concatenated：%s\n", str1);

    strcat(str1, str2);
    printf("Concatenated：%s\n", str1);

    strncat(str1, str2, 2);
    printf("Concatenate：%s\n", str1);

    return 0;
}
