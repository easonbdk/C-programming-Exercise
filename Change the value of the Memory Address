#include <stdio.h>

int main(void) {
    int x = 10;
    int *ptr = &x;
	printf("x = %d\n", x);
	printf("*ptr = %d\n", *ptr);
	
	*ptr=20;
	
	printf("x = %d\n", x);
	printf("*ptr = %d\n", *ptr);
	
    return 0;
}
